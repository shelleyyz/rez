<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>


<% if @user.image.present? %>
<p>
  <strong>Image:</strong>
  <%= cl_image_tag @user.image, :alt => @user.first_name %>
</p>
<% end %>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<% if @current_user.admin? %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% end %>
