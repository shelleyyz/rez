<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= render 'posts/nav' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>Comments</th>
      <th>Category</th>
      <th>Public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <% if post.published? %>

        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.first_name %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.category.name %></td>
        <td><%= post.published %></td>

        <% end %>

        <% if post.user.present? && post.published == false %>

        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.first_name %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.category.name %></td>
        <td><%= post.published %></td>

        <% end %>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
