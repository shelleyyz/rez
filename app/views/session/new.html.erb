<div class="sign-in-form">

<h1>Hi! I'm Rez..</h1>


<div class="sign-in-box">

<h2>Login</h2>

<h2><%= flash[:error] %></h2>

<%= form_tag login_path do %>
<div class="form-fields">
  <%= label_tag :email %>
</div>

  <%= email_field_tag :email, nil, :placeholder => 'glhf@ga.co'%>

<div class="form-fields">
  <%= label_tag :password %>
</div>

<div class="form-fields">
  <%= password_field_tag :password, nil %>
</div>

<small id="sign-up-text">
    Don't have an account? <%= link_to 'Sign up here!', new_user_path %>
</small>

<br>
<br>
<br>



<%= submit_tag "Log in", :class => 'chatbot-btn' %>

<% end %>
</div>
</div>
