<!DOCTYPE html>
<html>
  <head>
    <title>Rez</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <ul>
        <% if @user.present? %>
          <li>
            <%= link_to "Profile", @user %>
          </li>
          <li>
            <%= link_to "Sign Out #{ @user.first_name }", login_path, :method => 'delete'%>
          </li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
